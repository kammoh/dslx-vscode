{
    "name": "dslx",
    "displayName": "XLS DSLX Language Server",
    "description": "XLS DSLX using DSLX language server",
    "author": "Kamyar Mohajerani",
    "license": "Apache 2.0",
    "version": "0.0.1",
    "preview": true,
    "icon": "images/xls_antmicro_128x128.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/kammoh/dslx-vscode"
    },
    "publisher": "kamyar",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.78.0"
    },
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "DSLX Language Server",
            "properties": {
                "dslx.languageServerPath": {
                    "type": "string",
                    "default": "dslx_ls",
                    "scope": "machine-overridable",
                    "description": "The path to DSLX language server executable, e.g.: /usr/local/bin/dslx_ls"
                },
                "dslx.dslxPath": {
                    "type": "string",
                    "default": "",
                    "scope": "machine-overridable",
                    "description": "Additional paths to search for modules, colon delimited"
                },
                "dslx.stdlibPath": {
                    "type": "string",
                    "default": "xls/dslx/stdlib",
                    "scope": "machine-overridable",
                    "description": "Path to DSLX standard library files"
                }
            }
        },
        "languages": [
            {
                "id": "dslx",
                "extensions": [
                    ".x",
                    ".dslx"
                ],
                "aliases": [
                    "DSLX",
                    "dslx"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "dslx",
                "path": "./syntaxes/dslx.tmLanguage.json",
                "scopeName": "source.dslx"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "lint": "eslint ./src --ext .ts,.tsx",
        "package": "vsce package -o dslx.vsix"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@tsconfig/strictest": "^2.0.1",
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.18.34",
        "@types/vscode": "~1.78.1",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "@vscode/test-electron": "^2.3.3",
        "@vscode/vsce": "^2.22.0",
        "esbuild": "^0.18.20",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "mocha": "^9.2.1",
        "ovsx": "^0.8.3",
        "prettier": "^3.0.0",
        "tslib": "^2.6.0",
        "typescript": "^5.2.2"
    }
}
